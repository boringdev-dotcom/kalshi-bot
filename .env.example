# Kalshi API credentials
# Get these from https://trading-api.kalshi.com/trade-api-portal/
# Key ID is a UUID like: 1ae3670a-c64b-46b4-8741-315d8cee5a5d
KALSHI_API_KEY_ID=your_api_key_id_here

# Private Key in PEM format (RSA private key)
# Can be provided as a single line with \n for newlines, or multi-line
# Example format:
# -----BEGIN PRIVATE KEY-----
# MIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC...
# -----END PRIVATE KEY-----
KALSHI_PRIVATE_KEY_PEM=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----

# Discord webhook URL
# Create a webhook in your Discord server: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Kalshi WebSocket URL (defaults to demo environment)
KALSHI_WS_URL=wss://demo-api.kalshi.co/trade-api/ws/v2

DISCORD_BOT_TOKEN=Token

DISCORD_CHANNEL_ID=ChannelID

# Telegram configuration (optional - for order notifications)
# Create a bot via @BotFather on Telegram and get the token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Get chat ID by messaging your bot and checking https://api.telegram.org/bot<token>/getUpdates
# Or add @userinfobot to get your user ID, or use a group chat ID (starts with -)
TELEGRAM_CHAT_ID=your_chat_id_here

OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key_here

RESEARCH_SCHEDULE_HOUR=8
RESEARCH_SCHEDULE_MINUTE=0

GOOGLE_API_KEY=your_google_api_key_here

# The Odds API key (for live sports odds)
# Get a free key from https://the-odds-api.com/
ODDS_API_KEY=your_odds_api_key_here